<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base theme for dialogs -->
    <style name="Base.Theme.Lang.Dialog" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@drawable/roundcorner</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <!-- Custom Alert Dialog -->
    <style name="CustomAlertDialog" parent="Base.Theme.Lang.Dialog">
        <item name="android:windowBackground">@drawable/roundcorner</item>
        <!-- Add Material 3 dialog specific attributes if needed -->
    </style>

    <!-- Button Style -->
    <style name="LangWebButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_langweb_style</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <!-- Material 3 specific attributes -->
        <item name="shapeAppearance">@style/ShapeAppearance.Lang.Medium</item>
    </style>

    <!-- Shape Appearance for Buttons -->
    <style name="ShapeAppearance.Lang.Medium" parent="ShapeAppearance.Material3.MediumComponent">
        <!-- Customize corner size if needed -->
        <item name="cornerSize">8dp</item>
    </style>

    <!-- Edge-to-Edge Theme Settings -->
    <style name="Theme.Lang.EdgeToEdge" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="android:windowLightNavigationBar">?attr/isLightTheme</item>
    </style>
</resources>